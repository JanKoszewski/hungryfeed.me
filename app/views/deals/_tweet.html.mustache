<div class="tweet" id=tweet-{{id}}>
  <h2><a href="{{user_link}}">{{twitter_username}}</a></h2>
  <img src="{{twitter_user_image}}">
  <div class="details" id=details-{{id}}>
		<tr class="tweet_details_table">
	  	<td class="content">{{content}}</td>
	  	<td class="klout_score_title">Klout Score</td>
	  </tr>
	  <tr>
	  	<td class="link"><a class="tweet_link" href="{{url}}">Link!</a></td>
	  	<div class="klout_score">
	  	<div class="score">{{klout_score}}</div>
	  	<img src="http://kcdn3.klout.com/static/images/score-bubble-large.png" id="klout-score-bubble"></a>
	  </div>
  </div>
  <a href="{{respond_url}}" class="{{button_class}}" id="tweet_response">{{respond_title}}</a>
</div>